[flake8]
max-line-length = 100
exclude = .git,__pycache__,build,dist,.venv,tools
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py:F401
    # Allow missing docstrings in tests
    test_*.py:D100,D101,D102,D103
ignore =
    # Missing docstring in magic method
    D105,
    # line too long
    E501,
    # line break before binary operator
    W503,
    # import not at top of file
    E402